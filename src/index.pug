extends pug/base

block header
    +b.scoreboard
        +e.player
            +e.title#playerName Player
            +e.score#playerScore 0
        +e.raund
            +e.title Raund
            +e.score#raund 1
        +e.player
            +e.title#enemyName Enemy
            +e.score#enemyScore 0

block content

    #arena
        #enemy
            +b.hero
                +e.direction
                    +e.skillet
                        +e.head
                        +e.body
                        +e.arm_left
                            +e.hand_left
                        +e.arm_right
                            +e.hand_right
                        +e.leg_left
                        +e.leg_right
                +b.ui
        #player
            +b.hero
                +e.direction
                    +e.skillet
                        +e.head
                        +e.body
                        +e.arm_left
                            +e.hand_left
                        +e.arm_right
                            +e.hand_right
                        +e.leg_left
                        +e.leg_right
                +b.ui
                    +e.element_move-left(
                            data-action="move",
                            data-direction="-1"
                            data-icon="left"
                        )
                    +e.element_move-right(
                            data-action="move",
                            data-direction="1"
                            data-icon="right"
                        )
                    +e.element_jump(
                            data-action="jump",
                            data-icon="up"
                        )
                    +e.element_hit(
                            data-action="hit",
                            data-icon="hit"
                        )


block footer
